{
  "system":{
    "metrics":false,
    "metrics_interval":10,
    "metrics_dst":"logging"
  },
  "bootstrap":{
    "udpserver":{
      "module":"wishbone.iomodules.udpserver",
      "class":"UDPServer",
      "variables":{
        "port":8649
      }
    },
    "ganglia":{
      "module":"metricfactory.decoders.decodeganglia",
      "class":"DecodeGanglia",
      "variables":{

      }
    },
    "encodegraphite":{
        "module":"metricfactory.encoders.encodegraphite",
        "class":"EncodeGraphite",
        "variables":{
	  "prefix":"stats"
        }
    },
    "buffer":{
      "module":"wishbone.modules.tippingbucket",
      "class":"TippingBucket",
      "variables":{
        "age":10,
        "size":10000
      }
    },
    "tcpclient":{
      "module":"wishbone.iomodules.tcpclient",
      "class":"TCPClient",
      "variables":{
        "pool":["graphite-001:2003"]
      }
    }
  },
  "routingtable":{
    "udpserver.inbox":[
      "ganglia.inbox"
    ],
    "ganglia.outbox":[
      "encodegraphite.inbox"
    ],
    "encodegraphite.outbox":[
      "buffer.inbox"
    ],
    "buffer.outbox":[
      "tcpclient.inbox"
    ]
  }
}
